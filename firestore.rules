rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.phone_number == '+201006500506' ||
        request.auth.token.email == 'admin@padelcore.com'
      );
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Users can create their own bookings
      // Check that userId matches and status is pending
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'pending';
      
      // Users can read bookings for capacity checking (venue/time/date/status needed)
      // Admin can read all bookings
      // This allows users to check slot availability when booking
      allow read: if request.auth != null;
      
      // Users can delete their own bookings
      allow delete: if request.auth != null 
        && resource.data.userId == request.auth.uid;
      
      // Only admin can update bookings (for approval/rejection)
      allow update: if isAdmin();
    }
    
    // Config collection - authenticated users can read, only admin can write
    match /config/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Slots, venues, coaches collections - authenticated users can read, only admin can write
    match /slots/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /venues/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /coaches/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Users collection - users can read/write their own profile, admin can read/update all
    match /users/{userId} {
      // Users can read their own profile
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isAdmin()
      );
      // Users can create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can update their own profile, admin can update any profile (for skills)
      allow update: if request.auth != null && (
        request.auth.uid == userId || 
        isAdmin()
      );
      // Users can delete their own profile
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blocked slots collection - authenticated users can read, only admin can write
    match /blockedSlots/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
