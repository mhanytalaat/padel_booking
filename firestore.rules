// Deploy after editing: firebase deploy --only firestore:rules
// Guest read access (slots, venues, courtLocations, tournaments) requires this deploy.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // App config - readable by anyone (needed for force-update check before login)
    match /app_config/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Helper function to check if user is admin
    // Supports: 1) phone/email match, 2) custom claim 'admin' set to true (Firebase Auth > User > Custom claims)
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.phone_number == '+201006500506' ||
        request.auth.token.email == 'admin@padelcore.com' ||
        request.auth.token.get('admin', false) == true
      );
    }
    
    // Bookings collection (training/session bookings)
    match /bookings/{bookingId} {
      // Users can create their own bookings
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'pending';
      
      // Anyone can read for capacity/availability display (venue, time, date)
      allow read: if true;
      
      // Users can delete their own bookings; admin can delete any
      allow delete: if request.auth != null 
        && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Only admin can update bookings (for approval/rejection)
      allow update: if isAdmin();
    }
    
    // Config collection - anyone can read (for booking limits etc), only admin can write
    match /config/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Slots, venues, coaches - anyone can read (so guests can view training/court options), only admin can write
    match /slots/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /venues/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /coaches/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Users collection - users can read all profiles (for partner selection), admin can read/update all
    match /users/{userId} {
      // Users can read all profiles (needed for tournament partner selection)
      // Users can read their own profile, admin can read all
      allow read: if request.auth != null;
      // Users can create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      // Users can update their own profile, admin can update any profile (for skills)
      allow update: if request.auth != null && (
        request.auth.uid == userId || 
        isAdmin()
      );
      // Users can delete their own profile
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blocked slots - anyone can read (for schedule display), only admin can write
    match /blockedSlots/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Tournaments - anyone can read (so guests can view compete/dashboard), only admin can write
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /{subcollection=**} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }
    
    // Tournament registrations collection
    match /tournamentRegistrations/{registrationId} {
      // Users can create their own tournament registration requests
      allow create: if request.auth != null 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == 'pending';
      
      // Users can read their own registrations (query filters by userId), admin can read all
      // Note: For queries, we allow authenticated users to read, but queries filter by userId
      allow read: if request.auth != null;
      
      // Users can delete their own registrations, admin can delete any
      allow delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Only admin can update registrations (for approval/rejection)
      allow update: if isAdmin();
    }
    
    // Tournament matches - anyone can read (for dashboard), only admin can write
    match /tournamentMatches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Overall standings (e.g. TPF year leaderboard) - anyone can read
    match /tpfOverallStandings/{standingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Authenticated users can create notifications (for booking/tournament requests)
      allow create: if request.auth != null;
      
      // Allow authenticated users to read all notifications
      // We filter client-side by userId for regular users and show all for admins
      // This is safe because we filter the data client-side based on user permissions
      allow read: if request.auth != null;
      
      // Users can update their own notifications (mark as read), admin can update any
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        resource.data.isAdminNotification == true ||
        isAdmin()
      );
      
      // Users can delete their own notifications, admin can delete any
      allow delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        resource.data.isAdminNotification == true ||
        isAdmin()
      );
    }
    
    // Helper function to check if user is sub-admin for a location
    function isSubAdmin(locationId) {
      return request.auth != null && (
        isAdmin() ||
        request.auth.uid in get(/databases/$(database)/documents/courtLocations/$(locationId)).data.subAdmins
      );
    }
    
    // Court Locations - anyone can read (so guests can view courts), only admin can write
    match /courtLocations/{locationId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Court Bookings collection
    match /courtBookings/{bookingId} {
      // Users can create their own bookings
      // Sub-admins can create bookings for any user at their assigned location
      // Admin can create bookings for any user at any location
      allow create: if request.auth != null 
        && (request.resource.data.status == 'pending' || request.resource.data.status == 'confirmed')
        && (
          // User creating booking for themselves
          request.resource.data.userId == request.auth.uid ||
          // Sub-admin creating booking for others at their assigned location
          (request.resource.data.locationId != null && isSubAdmin(request.resource.data.locationId)) ||
          // Admin can create bookings for anyone
          isAdmin()
        );
      
      // Anyone can read for availability display; users see their own, sub-admins see location, admin all
      allow read: if true;
      
      // Users can delete their own bookings, sub-admins can delete bookings for their location, admin can delete any
      allow delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin() ||
        isSubAdmin(resource.data.locationId)
      );
      
      // Users can update their own bookings (cancel), sub-admins can update bookings for their location, admin can update any
      allow update: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin() ||
        isSubAdmin(resource.data.locationId)
      );
    }
    
    // Sub-admin action logs collection
    match /subAdminLogs/{logId} {
      // Only admin can read logs
      allow read: if isAdmin();
      
      // Sub-admins and admin can create logs (for tracking actions)
      allow create: if request.auth != null && (
        isAdmin() ||
        isSubAdmin(request.resource.data.locationId)
      );
    }
    
    // Training Bundles collection
    match /bundles/{bundleId} {
      // Users can create their own bundle requests; admin can create for any user
      allow create: if request.auth != null && (
        (request.resource.data.userId == request.auth.uid
          && request.resource.data.status == 'pending') ||
        isAdmin()
      );
      
      // Users can read their own bundles, admin can read all
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      
      // Only admin can update bundles (for approval, payment confirmation, etc.)
      allow update: if isAdmin();
      
      // Users can delete their own pending bundles, admin can delete any
      allow delete: if request.auth != null && (
        (resource.data.userId == request.auth.uid && resource.data.status == 'pending') ||
        isAdmin()
      );
    }
    
    // Bundle Sessions collection
    match /bundleSessions/{sessionId} {
      // System can create bundle sessions (when booking is made)
      allow create: if request.auth != null;
      
      // Users can read their own bundle sessions, admin can read all
      allow read: if request.auth != null;
      
      // Only admin can update bundle sessions (for attendance marking)
      allow update: if isAdmin();
      
      // Only admin can delete bundle sessions
      allow delete: if isAdmin();
    }
  }
}
