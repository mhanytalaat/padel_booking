rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Location logos - public read access (download URLs have tokens for security), only admin can write
    match /location_logos/{logoId} {
      // Allow public read access (download URLs are secure with tokens)
      // This is needed for web CORS and image loading
      allow read: if true;
      
      // Only allow admin to upload location logos
      allow write: if request.auth != null && (
        request.auth.token.phone_number == '+201006500506' ||
        request.auth.token.email == 'admin@padelcore.com'
      );
      
      // Allow uploads up to 5MB
      allow create: if request.auth != null && (
        request.auth.token.phone_number == '+201006500506' ||
        request.auth.token.email == 'admin@padelcore.com'
      ) && request.resource.size < 5 * 1024 * 1024;
    }
    
    // Profile photos - users can upload their own photos
    match /profile_photos/{filename} {
      // Anyone can read profile photos (for displaying in app)
      allow read: if true;
      
      // Extract userId from filename (filename format: userId.jpg)
      // Users can only write their own profile photo
      allow write: if request.auth != null && 
        filename.matches('^' + request.auth.uid + '\\.(jpg|jpeg|png|gif|webp)$');
      
      // Allow uploads up to 2MB for profile photos
      allow create, update: if request.auth != null && 
        filename.matches('^' + request.auth.uid + '\\.(jpg|jpeg|png|gif|webp)$') &&
        request.resource.size < 2 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
        
      // Users can delete their own profile photo
      allow delete: if request.auth != null && 
        filename.matches('^' + request.auth.uid + '\\.(jpg|jpeg|png|gif|webp)$');
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
